{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 550,
    "height": 400,
    "title": "Average Yearly Rainfall Australia: 2008-2017",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aliceb123/vis2part1/main/js/aus_map_wgraticules.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "#49fcac", "stroke": "darkgrey"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/aliceb123/vis2part1/main/data/weatherAUS.csv"
        },
        "mark": {"type": "circle",
        "color":{
          "x1":1,
          "y1":1,
          "x2":1,
          "y2":0,
          "gradient": "linear",
          "stops":[{
            "offset":0, 
            "color": "white"
          },
          {"offset": 1,
          "color": "darkblue"
          }]
        }
      },
        "encoding": {
          "longitude": {"field": "longitude", "type": "quantitative"},
          "latitude": {"field": "latitude", "type": "quantitative"},
          "size": {
            "field": "rainfall",
            "type": "quantitative",
            "title": "Rainfall",
            "scale": {"domain": [100, 2000]}
          },
          "tooltip": [
            {"field": "Location", "type": "nominal", "title": "Location"},
            {"field": "rainfall", "type": "quantitative", "title": "Rainfall (mm)"}
          ]
        }
      }
    ]
  }